---
export type SectionProps = {
  title?: string;
};

type Props = SectionProps;

const {title} = Astro.props;
---

<section>
  {title && <h3>{title}</h3>}
  <div><slot /></div>
</section>

<style>
  section {
    margin-block: 3rem;
  }
  div {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1.5rem;
  }
  h3 {
    margin-bottom: 1rem;
    border-left: 4px solid deeppink;
    padding-left: 1rem;
  }
</style>
