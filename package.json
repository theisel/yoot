{
  "name": "root",
  "type": "module",
  "private": true,
  "scripts": {
    "build:lib": "pnpm --filter @yoot/yoot build && pnpm --filter yoot build && pnpm --filter './packages/adapters/**' --parallel -r build && pnpm docs:postprocess",
    "demo:launch": "pnpm --filter demo astro dev",
    "docs:postprocess": "node ./scripts/docs-postprocess.js && npx prettier --write ./docs **/etc/*.api.md",
    "clean": "pnpm --parallel -r clean",
    "format": "prettier --write .",
    "format:docs": "prettier --write .",
    "lint": "npx eslint .",
    "changeset:version": "pnpm changeset version && node ./scripts/sync-jsr-versions.js",
    "changeset:publish": "pnpm build:lib && pnpm changeset publish && pnpm jsr publish",
    "test": "pnpm -r --parallel --workspace-concurrency=1 test",
    "test:bun": "pnpm --parallel -r test:bun",
    "test:cloudflare": "pnpm -r --parallel --workspace-concurrency=1 test:cloudflare",
    "test:coverage": "vitest run --coverage",
    "test:deno": "pnpm --parallel -r test:deno",
    "test:node": "vitest run"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.2.1",
    "@changesets/cli": "^2.29.4",
    "@manypkg/get-packages": "^3.0.0",
    "@microsoft/api-documenter": "^7.26.27",
    "@microsoft/api-extractor": "^7.52.8",
    "@vitest/coverage-v8": "^3.1.4",
    "bun": "^1.2.15",
    "deno": "^2.3.5",
    "eslint": "^9.27.0",
    "fast-glob": "^3.3.3",
    "globals": "^16.2.0",
    "jsr": "^0.13.4",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.4",
    "wrangler": "^4.18.0"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=22"
  }
}
